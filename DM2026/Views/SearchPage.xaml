<?xml version="1.0" encoding="utf-8" ?>
<!-- 
    Page de recherche de produits
    - Permet de rechercher des produits par texte
    - Offre un filtrage par catÃ©gories et sous-catÃ©gories
    - Affiche les rÃ©sultats dans une liste avec dÃ©tails simplifiÃ©s
    - Inclut des messages explicatifs quand aucun rÃ©sultat n'est trouvÃ©
-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DantecMarketApp.Views.SearchPage"
             xmlns:converters="clr-namespace:DantecMarketApp.Converters"
             Title="Recherche"
             BackgroundColor="#FAF7F2">

    <Grid RowDefinitions="Auto,Auto,*" Padding="15">
        <!-- 
            Barre de recherche avancÃ©e avec:
            - Champ de saisie pour le texte de recherche
            - Bouton pour effacer le texte (visible uniquement quand du texte est prÃ©sent)
            - Bouton de recherche avec icÃ´ne de loupe
        -->
        <Frame Grid.Row="0" 
       Padding="5" 
       CornerRadius="25" 
       HasShadow="True" 
       BackgroundColor="White"
       Margin="0,10,0,15">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <Entry Grid.Column="0"
               Placeholder="Rechercher un produit..."
               Text="{Binding SearchQuery}"
               PlaceholderColor="#9E9E9E"
               TextColor="#333333"
               VerticalOptions="Center" 
               Margin="10,0,0,0"/>

                <!-- Bouton pour effacer le texte (âœ•) -->
                <Button Grid.Column="1"
                Text="âœ•"
                Command="{Binding ClearSearchCommand}"
                BackgroundColor="Transparent"
                TextColor="#9E9E9E"
                CornerRadius="20"
                HeightRequest="40"
                WidthRequest="40"
                IsVisible="{Binding SearchQuery, Converter={StaticResource StringNotEmptyConverter}}"/>

                <!-- Bouton de recherche avec icÃ´ne de loupe (ðŸ”) -->
                <Button Grid.Column="2"
                Text="ðŸ”"
                Command="{Binding SearchCommand}"
                BackgroundColor="#F4B942"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="40"
                WidthRequest="50"
                Margin="5,0"
                FontSize="18"/>
            </Grid>
        </Frame>

        <!-- 
            Section de navigation par catÃ©gories avec:
            - SÃ©lecteur de catÃ©gorie principale (Picker)
            - Liste horizontale dÃ©filante de sous-catÃ©gories
        -->
        <Frame Grid.Row="1" 
               BackgroundColor="White" 
               Padding="10" 
               HasShadow="True" 
               CornerRadius="10"
               Margin="0,0,0,15">
            <VerticalStackLayout Spacing="10">
                <Label Text="Filtrer par catÃ©gories" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       TextColor="#1F1E1C"/>

                <HorizontalStackLayout>
                    <Label Text="CatÃ©gorie principale:" 
                           VerticalOptions="Center" 
                           FontSize="14" 
                           TextColor="#666666"
                           Margin="0,0,10,0"/>

                    <Picker Title="SÃ©lectionner une catÃ©gorie" 
                        TitleColor="#666666"
                        ItemsSource="{Binding ParentCategories}" 
                        ItemDisplayBinding="{Binding Nom}"
                        SelectedItem="{Binding SelectedParentCategory}"
                        BackgroundColor="WhiteSmoke"
                        TextColor="#1F1E1C"
                        WidthRequest="200"/>


                </HorizontalStackLayout>

                <!-- 
                    Liste horizontale des sous-catÃ©gories qui apparaissent 
                    aprÃ¨s sÃ©lection d'une catÃ©gorie principale
                -->
                <CollectionView ItemsSource="{Binding SubCategories}"
                              HeightRequest="50" 
                              HorizontalScrollBarVisibility="Never">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10,5" 
                                   BorderColor="#F4B942" 
                                   BackgroundColor="#FFF8E1" 
                                   CornerRadius="15">
                                <Label Text="{Binding Nom}" 
                                       TextColor="#1F1E1C" 
                                       FontSize="14"/>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=SelectCategoryCommand}"
                                                          CommandParameter="{Binding}"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label Text="SÃ©lectionnez une catÃ©gorie principale" 
                               TextColor="#666666" 
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </CollectionView.EmptyView>
                </CollectionView>
            </VerticalStackLayout>
        </Frame>

        <!-- 
            Section d'affichage des rÃ©sultats de recherche avec:
            - Titre "RÃ©sultats"
            - Liste de produits avec image, nom, description courte et prix
            - Vue alternative quand aucun rÃ©sultat n'est trouvÃ©
        -->
        <Frame Grid.Row="2" 
               BackgroundColor="White" 
               Padding="15" 
               HasShadow="True" 
               CornerRadius="10">
            <Grid RowDefinitions="Auto,*">
                <Label Text="RÃ©sultats" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#1F1E1C"
                       Margin="0,0,0,10"/>

                <!-- Liste des rÃ©sultats de recherche -->
                <ListView Grid.Row="1" 
                          ItemsSource="{Binding SearchResults}"
                          HasUnevenRows="True"
                          SelectionMode="Single"
                          ItemSelected="OnProductSelected"
                          SeparatorVisibility="Default"
                          SeparatorColor="#E0E0E0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                                    <!-- Image miniature du produit -->
                                    <Frame Grid.Column="0" 
                                           WidthRequest="70" 
                                           HeightRequest="70" 
                                           Padding="0" 
                                           CornerRadius="10" 
                                           IsClippedToBounds="True">
                                        <Image Source="{Binding LesImages[0].Url, TargetNullValue='dotnet_bot.png'}" 
                                               Aspect="AspectFill"/>
                                    </Frame>

                                    <!-- Informations simplifiÃ©es du produit -->
                                    <VerticalStackLayout Grid.Column="1" 
                                                         VerticalOptions="Center" 
                                                         Margin="15,0">
                                        <Label Text="{Binding NomProduit}" 
                                               FontAttributes="Bold" 
                                               TextColor="#1F1E1C"/>
                                        <Label Text="{Binding DescriptionCourte}" 
                                               LineBreakMode="TailTruncation" 
                                               MaxLines="2" 
                                               TextColor="#666666"
                                               FontSize="12"/>
                                    </VerticalStackLayout>

                                    <!-- Prix du produit -->
                                    <Label Grid.Column="2" 
                                           Text="{Binding Prix, StringFormat='{0:F2} â‚¬'}" 
                                           TextColor="#F4B942" 
                                           FontAttributes="Bold" 
                                           VerticalOptions="Center"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- 
                    Message affichÃ© quand aucun rÃ©sultat n'est trouvÃ© 
                    avec instructions pour l'utilisateur
                -->
                <ContentView Grid.Row="1" 
                             IsVisible="{Binding SearchResults.Count, Converter={StaticResource CountToBoolConverter}, ConverterParameter=0}">
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="dotnet_bot.png" HeightRequest="100" Opacity="0.5"/>
                        <Label Text="Aucun produit trouvÃ©" 
                               TextColor="#666666" 
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"/>
                        <Label Text="Utilisez la barre de recherche ou sÃ©lectionnez une catÃ©gorie" 
                               TextColor="#9E9E9E" 
                               HorizontalOptions="Center"
                               FontSize="12"/>
                    </StackLayout>
                </ContentView>
            </Grid>
        </Frame>

        <!-- Indicateur de chargement pendant le traitement des recherches -->
        <ActivityIndicator Grid.RowSpan="3" 
                           IsRunning="{Binding IsLoading}" 
                           IsVisible="{Binding IsLoading}"
                           Color="#F4B942"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Scale="2"/>
    </Grid>
</ContentPage>