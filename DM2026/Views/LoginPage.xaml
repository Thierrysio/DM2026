<?xml version="1.0" encoding="utf-8" ?>
<!-- 
Page de connexion de l'application Dantec Market
Cette page contient :
- Un arrière-plan avec image
- Un logo en haut
- Un formulaire de connexion avec validation
- Des options de mémorisation et de récupération de mot de passe
-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DantecMarketApp.ViewModels"
             x:Class="DantecMarketApp.Views.LoginPage">

    <Grid>
        <!-- Image d'arrière-plan avec légère opacité -->
        <Image Source="login.jpg"
               Aspect="AspectFill"
               Opacity="0.9"/>

        <ScrollView>
            <Grid RowSpacing="0" Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 
                Logo circulaire en haut de page
                Utilise un Frame avec bordure blanche et découpage circulaire
                -->
                <Frame Grid.Row="0"
                       HeightRequest="150"
                       WidthRequest="150"
                       CornerRadius="75"
                       IsClippedToBounds="True"
                       Padding="0"
                       BackgroundColor="Transparent"
                       BorderColor="White"
                       Margin="0,20,0,0"
                       HorizontalOptions="Center">
                    <Image Source="logo.jpg"
                           Aspect="AspectFill">
                        <Image.Shadow>
                            <Shadow Brush="#40000000"
                                   Offset="0,4"
                                   Radius="12"/>
                        </Image.Shadow>
                    </Image>
                </Frame>

                <!-- 
                Formulaire de connexion
                Utilise un Frame arrondi semi-transparent pour le fond
                -->
                <Frame Grid.Row="1"
                       Margin="0,20,0,0"
                       CornerRadius="30"
                       HasShadow="True"
                       BorderColor="Transparent"
                       BackgroundColor="#FFFFFF"
                       Opacity="0.95"
                       Padding="24">

                    <VerticalStackLayout Spacing="25">
                        <!-- Titre de bienvenue -->
                        <Label Text="Bienvenue"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1F1E1C"/>

                        <!-- 
                        Champ Email avec validation et affichage d'erreur
                        Utilise une bordure conditionnelle rouge en cas d'erreur
                        -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Email"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1F1E1C"/>
                            <Border Stroke="{Binding EmailError, Converter={StaticResource StringNotEmptyConverter}, ConverterParameter=#FF4444}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 15">
                                <Frame BackgroundColor="#F8F9FA"
                                       Padding="15,5"
                                       HasShadow="False"
                                       BorderColor="Transparent">
                                    <Entry Placeholder="Entrez votre email"
                                           Text="{Binding Email}"
                                           TextColor="#333333"
                                           PlaceholderColor="#9E9E9E"
                                           Keyboard="Email"/>
                                </Frame>
                            </Border>
                            <!-- Message d'erreur pour l'email -->
                            <Label Text="{Binding EmailError}"
                                   TextColor="#FF4444"
                                   FontSize="12"
                                   Margin="15,0,0,0"
                                   IsVisible="{Binding EmailError, Converter={StaticResource StringNotEmptyConverter}}"/>
                        </VerticalStackLayout>

                        <!-- 
                        Champ Mot de passe avec validation et affichage d'erreur
                        Inclut un bouton pour afficher/masquer le mot de passe
                        -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Mot de passe"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1a237e"/>
                            <Border Stroke="{Binding PasswordError, Converter={StaticResource StringNotEmptyConverter}, ConverterParameter=#FF4444}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 15">
                                <Frame BackgroundColor="#F8F9FA"
                                       Padding="15,5"
                                       HasShadow="False"
                                       BorderColor="Transparent">
                                    <Grid ColumnDefinitions="*, Auto">
                                        <!-- Champ de mot de passe -->
                                        <Entry Grid.Column="0"
                                               Placeholder="Entrez votre mot de passe"
                                               Text="{Binding Password}"
                                               IsPassword="{Binding IsPasswordVisible, Converter={StaticResource InvertBooleanConverter}}"
                                               TextColor="#333333"
                                               PlaceholderColor="#9E9E9E"/>
                                        <!-- Bouton pour basculer la visibilité du mot de passe -->
                                        <ImageButton Grid.Column="1"
                                                Source="{Binding IsPasswordVisible, Converter={StaticResource BoolToStringConverter}, ConverterParameter=eye_open.png:eye_closed.png}"
                                                Command="{Binding TogglePasswordVisibilityCommand}"
                                                BackgroundColor="Transparent"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                Padding="10"
                                                Margin="0"/>
                                    </Grid>
                                </Frame>
                            </Border>
                            <!-- Message d'erreur pour le mot de passe -->
                            <Label Text="{Binding PasswordError}"
                                   TextColor="#FF4444"
                                   FontSize="12"
                                   Margin="15,0,0,0"
                                   IsVisible="{Binding PasswordError, Converter={StaticResource StringNotEmptyConverter}}"/>
                        </VerticalStackLayout>

                        <!-- Option "Se souvenir de moi" avec CheckBox -->
                        <HorizontalStackLayout Spacing="12">
                            <CheckBox Color="#F4B942"
                                     IsChecked="{Binding RememberMe}"/>
                            <Label Text="Se souvenir de moi"
                                   VerticalOptions="Center"
                                   TextColor="#666666"
                                   FontSize="14"/>
                        </HorizontalStackLayout>

                        <!-- 
                        Bouton de connexion
                        Utilise la couleur principale de l'application et un effet d'ombre
                        -->
                        <Button Text="SE CONNECTER"
                                Command="{Binding LoginCommand}"
                                BackgroundColor="#F4B942"
                                TextColor="White"
                                CornerRadius="25"
                                HeightRequest="50"
                                FontAttributes="Bold"
                                Margin="0,10">
                            <Button.Shadow>
                                <Shadow Brush="#40000000"
                                       Offset="0,4"
                                       Radius="8"
                                       Opacity="0.5"/>
                            </Button.Shadow>
                        </Button>

                        <!-- 
                        Lien "Mot de passe oublié"
                        Utilise un TapGestureRecognizer pour la navigation
                        -->
                        <Label Text="Mot de passe oublié ?"
                               TextColor="#F4B942"
                               HorizontalOptions="Center"
                               FontSize="14"
                               FontAttributes="Bold">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </VerticalStackLayout>
                </Frame>

                <!-- 
                Message de statut (erreur ou succès)
                Apparaît conditionnellement en bas du formulaire
                -->
                <Border Grid.Row="2"
                        StrokeShape="RoundRectangle 20"
                        BackgroundColor="#80000000"
                        Padding="16,8"
                        Margin="0,16,0,0"
                        HorizontalOptions="Center"
                        IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyConverter}}">
                    <Label Text="{Binding Message}"
                           TextColor="White"
                           FontAttributes="Bold"
                           FontSize="14">
                        <Label.Shadow>
                            <Shadow Brush="#40000000"
                                   Offset="0,2"
                                   Radius="4"/>
                        </Label.Shadow>
                    </Label>
                </Border>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>